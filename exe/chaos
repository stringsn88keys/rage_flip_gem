#!/usr/bin/env ruby

require_relative '../lib/rage_flip'

text = ARGV.join(' ')

if text.empty?
  puts "Usage: chaos <text_to_chaos>"
  exit 1
end

result = RageFlip::Chaos.process(text)

if RageFlip::Clipboard.copy(result)
  puts result
else
  puts "Failed to copy to clipboard, but here's your chaotic text:"
  puts result
end